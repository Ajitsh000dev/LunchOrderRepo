@{
    var isAuthenticated = User.Identity?.IsAuthenticated ?? false;
}

<ul class="navbar-nav">
    @if (isAuthenticated)
    {
        <li class="nav-item">
            <a class="nav-link text-white" href="/Account/Manage" title="Manage">Hello @User.Identity?.Name!</a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-area="Accounts" asp-page="/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-black" asp-area="Accounts" asp-page="/Register">
                Register
                <i class="fa fa-user-plus"></i>
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-black" asp-area="Accounts" asp-page="/Login">
                Login
                <i class="fa fa-sign-in" aria-hidden="true"></i>
            </a>
        </li>
    }
</ul>
